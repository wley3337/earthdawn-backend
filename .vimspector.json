{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json#",
  "configurations": {
    "Python-Flask": {
      "adapter": "debugpy",
      "configuration": {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": false,
        "console": "internalConsole",
        "debugOptions": [],
        "subProcess": false,
        "args": ["run", "--no-debugger", "--no-reload"]
      }
    }
  }
}
